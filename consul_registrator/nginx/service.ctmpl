upstream flaskapp {
  least_conn;
  {{range service "flaskapp"}}server {{.Address}}:{{.Port}} max_fails=3 fail_timeout=60 weight=1;
  {{else}}server 127.0.0.1:65535; # force a 502{{end}}
}

server {
  listen 8080 default_server;

  charset utf-8;

  location / {
    proxy_pass http://flaskapp;
  }
}
